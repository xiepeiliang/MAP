<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_login"
    tools:context="com.example.xpl.map.RegisterActivity">
    <TextView
        android:id="@+id/textView_title_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册成为新用户"
        android:textSize="30dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="54dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="16dp" />
    <EditText
        android:id="@+id/editText_register_firstname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="姓"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_title_register"
        android:layout_marginTop="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/editText_register_lastname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="名"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_register_firstname"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/editText_register_phonenumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="手机号(这将是你的帐号)"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/editText_register_lastname"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/editText_register_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="电子邮箱"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/editText_register_phonenumber"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/editText_register_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="密码"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/editText_register_email"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/editText_register_repassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="重复输入您的密码"
        android:textSize="20dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/editText_register_password"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/button_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#11000000"
        app:layout_constraintTop_toBottomOf="@id/editText_register_repassword"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="注册"
        android:textSize="20dp"
        android:textColor="#ffffff"
        />
</android.support.constraint.ConstraintLayout>
